  "license": "MIT",
  "private": true,
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.4.0",
    "@types/node": "^16.11.4",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.3.0",
    "electron": "^13.0.0",
    "electron-builder": "^22.13.1",
    "electron-rebuild": "^3.2.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^4.3.8",
    "lint-staged": "^11.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "sass": "^1.42.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.3",
    "webpack": "^5.57.1",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1",
    "webpack-merge": "^5.8.0"
  },
  "devEngines": {
    "node": ">=14.x",
    "npm": ">=8.x"
  },
  "scripts": {
    "build": "run-p build:main build:renderer",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.config/webpack/webpack.config.prod.main.ts",
    "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.config/webpack/webpack.config.prod.renderer.ts",
    "start": "npx electron release/app",
    "dev": "npm run dev:renderer",
    "dev:main": "cross-env NODE_ENV=development electron -r ts-node/register/transpile-only ./src/main/main.ts",
    "dev:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.config/webpack/webpack.config.dev.renderer.ts",
    "lint": "cross-env NODE_ENV=development eslint . --cache --ext .js,.jsx,.ts,.tsx,.json",
    "format": "prettier --config .prettierrc.js --write \"./**/*.{html,css,scss,json,js,jsx,ts,tsx,md}\"",
    "postinstall": "ts-node ./.config/script/check-native-dep.js && electron-builder install-app-deps && cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.config/webpack/webpack.config.dev.renderer.dll.ts",
    "install-native-dep": "npm install better-sqlite3 --prefix release/app",
    "build-native-dep": "npm run postinstall --prefix release/app",
    "native-dep": "run-s install-native-dep build-native-dep"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=development eslint --cache"
    ],
    "*.json,.{eslintrc,prettierrc}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  }
}
